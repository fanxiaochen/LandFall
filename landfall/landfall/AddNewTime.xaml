<Window x:Class="landfall.AddNewTimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:landfall"
        Title="AddNewTimeWindow" Height="300" Width="152.8" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
    <ListView x:Name="listView" HorizontalAlignment="Left" Height="256.8" VerticalAlignment="Top" Width="146.4" 
              ScrollViewer.HorizontalScrollBarVisibility="Disabled" MouseDoubleClick="ListView_MouseDoubleClick">
    		<ListView.View>
        <GridView>
          <GridViewColumn Width="146" Header="用户名" DisplayMemberBinding="{Binding _userName}"/>
          <GridViewColumn/>
        </GridView>
      </ListView.View>
    	</ListView>
    <Button x:Name="cancel" Content="取消" HorizontalAlignment="Left" Margin="35.6,261.8,0,0" VerticalAlignment="Top" Width="75" Click="cancel_Click"/>
        
    </Grid>
</Window>
