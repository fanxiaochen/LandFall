<Window x:Class="landfall.ChangePwdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改密码" Height="164" Width="477.6" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="69*"/>
    		<ColumnDefinition Width="88*"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
    	<Label Content="请输入当前密码" HorizontalAlignment="Left" Margin="34.4,26.6,0,0" VerticalAlignment="Top" Width="177.2" FontFamily="STXingkai" FontSize="21.333" Grid.ColumnSpan="2" Height="33.273"/>
    	<PasswordBox x:Name="pwdBox" Grid.Column="1" HorizontalAlignment="Left" Margin="0,26.6,0,0" VerticalAlignment="Top" Width="207.2" Height="33.273" FontFamily="STXingkai" FontSize="21.333"/>
    	<Button Content="确认" HorizontalAlignment="Left" Height="30.4" Margin="61.6,26.2,0,0" Grid.Row="1" VerticalAlignment="Top" Width="96" FontFamily="STXingkai" FontSize="21.333" Click="Button_Click_Confirm"/>
    	<Button Content="取消" HorizontalAlignment="Left" Height="30.4" Margin="80.112,26.2,0,0" Grid.Row="1" VerticalAlignment="Top" Width="96" Grid.Column="1" RenderTransformOrigin="0.383,0.632" FontFamily="STXingkai" FontSize="21.333" Click="Button_Click_Cancel"/>
        
    </Grid>
</Window>
