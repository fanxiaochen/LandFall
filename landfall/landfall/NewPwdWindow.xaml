    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Label Content="请输入新密码" HorizontalAlignment="Left" Margin="43.2,20.2,0,0" VerticalAlignment="Top" FontFamily="STXingkai" FontSize="21.333" Width="188.8"/>
